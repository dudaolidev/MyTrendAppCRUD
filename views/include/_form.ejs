<!-- form handling -->
<form method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" name="name" value="" placeholder="Nome da Loja">
        </div>
        
        <div class="form-group">
            <label for="address">Endereço</label>
            <input type="text" name="address" value="" placeholder="Avenida Central">
        </div>
        
        <div class="form-group">
            <label for="city">Cidade</label>
            <input type="text" name="city" value="" placeholder="São Paulo">
        </div>
        
        <div class="form-group">
            <label for="state">Estado</label>
            <input type="text" name="state" value="" placeholder="SP">
        </div>
        
        <div class="form-group">
            <label for="zip">CEP</label>
            <input type="text" name="zip" value="" placeholder="01002-001">
        </div>
        
        <div class="form-group">
            <label for="country">País</label>
            <input type="text" name="country" value="" placeholder="Brazil">
        </div>
        
        <div class="form-group">
            <label for="phone">Telefone</label>
            <input type="text" name="phone" value="" placeholder="+55 11 1234-5678">
        </div>
        
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" name="email" value="" placeholder="contato@lojaa.com">
        </div>
        
        <div class="form-group">
            <label for="website">Website</label>
            <input type="text" name="website" value="" placeholder="https://www.lojaa.com">
        </div>
        
        <div class="form-group">
            <label for="categories">Categorias</label>
            <input type="text" name="categories" value="" placeholder="vestuário, acessórios">
        </div>
        
        <div class="form-group">
            <label for="brands">Marcas</label>
            <input type="text" name="brands" value="" placeholder="Marca A, Marca B">
        </div>
        
        <div class="form-group">
            <label for="rating">Avaliação</label>
            <input type="number" min="0" max="5" step="0.1" name="rating" value="" placeholder="4.5">
        </div>
        
        <div class="form-group">
            <label for="total_reviews">Total de Avaliações</label>
            <input type="number" min="0" name="total_reviews" value="" placeholder="">
        </div>
        
        <div class="form-group">
            <label for="is_verified_partner">Parceiro Verificado</label>
            <select name="is_verified_partner">
                <option value="">Selecione...</option>
                <option value='true'>Sim</option>
                <option value='false'>Não</option>
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Salvar</button>
        </div>
    </div>
 </form>